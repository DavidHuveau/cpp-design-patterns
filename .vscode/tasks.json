{
    "tasks": [
        {
            "type": "shell",
            "label": "C++ - Debug Single File",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++20",
                "-stdlib=libc++",
                "-g",
                "-Wall",
                "${file}",
                "-o",
                "${fileDirname}/a.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "C++ - Debug Multi File",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++20",
                "-stdlib=libc++",
                "-g",
                "-Wall",
                "Repository/*.cpp",
                "Strategy/*.cpp",
                "Adapter/*.cpp",
                "AbstractFactory/*.cpp",
                "FactoryMethod/*.cpp",
                "Builder/*.cpp",
                "Singleton/*.cpp",
                "Prototype/*.cpp",
                "Bridge/*.cpp",
                "Composite/*.cpp",
                "Decorator/*.cpp",
                "Facade/*.cpp",
                "Flyweight/*.cpp",
                "Proxy/*.cpp",
                "ChainOfResponsibility/*.cpp",
                "*.cpp",
                "-o",
                "${fileDirname}/a.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
